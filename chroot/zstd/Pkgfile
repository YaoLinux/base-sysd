version=1.4.4

source=(http://rems.6admin.net/sources/development/$name-${version}.tar.gz)

build() {

mkdir -v build && cd build

meson --prefix=/usr \
      -Dbin_programs=true \
      -Dbin_contrib=true \
      -Dmulti_thread=enabled \
      ../$name-$version/build/meson

ninja
DESTDIR=$PKG ninja install
}
