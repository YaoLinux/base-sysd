version=1.10.0

source=(https://github.com/ninja-build/ninja/archive/v$version/ninja-$version.tar.gz)
	
build() {

	cd ninja-$version
	python3 configure.py --bootstrap
	
	install -vm755 -D ninja /usr/bin/ninja
	install -vm644 -D misc/bash-completion /usr/share/bash-completion/completions/ninja
	install -vm644 -D misc/zsh-completion  /usr/share/zsh/site-functions/_ninja
}
