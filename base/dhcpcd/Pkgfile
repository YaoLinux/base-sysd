description="Connect your computer to a network which uses DHCP to assign network addresses."
url="http://roy.marples.name/projects/dhcpcd"
maintainer="Roy Marples"
packager="tnut <tnut@nutyx.org>"

name=dhcpcd
version=7.0.8
yaolinux_version=1.0-RC1

source=(http://downloads.yaolinux.org/yaolinux/files/yaolinux-${yaolinux_version}.tar.xz
        http://roy.marples.name/downloads/$name/$name-$version.tar.xz)

build() {
cd $name-$version
./configure --prefix= \
--libexecdir=/lib/dhcpcd \
--dbdir=/var/lib/dhcpcd
make
make DESTDIR=$PKG install
cd ../yaolinux-${yaolinux_version}
make install-dhcpcd
}
